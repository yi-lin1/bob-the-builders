from datetime import datetime

def days_between_dates(date1, date2):
    date_format = "%d-%m-%Y"
    # Convert strings to datetime objects
    datetime1 = datetime.strptime(date1, date_format)
    datetime2 = datetime.strptime(date2, date_format)
    
    # Calculate the difference between dates
    delta = datetime2 - datetime1
    return abs(delta.days)  # Taking absolute value to ensure positive number of days

# Example usage:
date_string1 = "25-12-2023"
date_string2 = "31-12-2023"
days_difference = days_between_dates(date_string1, date_string2)
print(f"The number of days between {date_string1} and {date_string2} is: {days_difference} days")
